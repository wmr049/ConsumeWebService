<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- INÍCIO - Configurações Connector Pagamento Digital Buscapé -->
    
    <!-- Encondig que será utilizado na aplicação. Exemplo: utf-8 -->
    <add key="PD_CHARSET" value="utf-8" />
    
    <!-- Indica se será utilizado um proxy para conexão. Valores: "true" ou "false". -->
    <add key="PD_USE_PROXY" value="false" />
    <!-- Host do proxy. Exemplo: 192.168.0.1 -->
    <add key="PD_PROXY_HOST" value="192.168.0.1" />
    <!-- Porta do proxy. Exemplo: 8081 -->
    <add key="PD_PROXY_PORT" value="8081" />
    <!-- Usuário do proxy, quando existe autenticação. Exemplo: bcash -->
    <add key="PD_PROXY_USER" value="bcash" />
    <!-- Senha do usuário do proxy, quando existe autenticação. Exemplo: bcash -->
    <add key="PD_PROXY_PASSWORD" value="bcash" />
    <!-- Domínio de autenticação do proxy. Exemplo: bcash -->
    <add key="PD_PROXY_DOMAIN" value="bcash" />
    
    <!-- Número máximo de produtos por consulta. Exemplo: 3 -->
    <add key ="PD_EXTENDED_WARRANTY_MAX_PRODUCTS" value="3"/>
    
    <!-- URI referente ao endereço do serviço de consulta de contas por CPF. -->
    <add key="PD_URI_ACCOUNT_SEARCH_CPF" value="https://api.bcash.com.br/service/searchAccount" />
    <!-- URI referente ao endereço do serviço de criação de transações. -->
    <add key="PD_URI_TRANSACTION_CREATE" value="https://api.bcash.com.br/service/createTransaction" />
    <!-- URI referente ao endereço do serviço de consulta de garantias estendidas. -->
    <add key="PD_URI_EXTENDED_WARRANTY"  value="https://api.bcash.com.br/service/searchExtendedWarranty" />
    
    <!-- FIM - Configurações Connector Pagamento Digital Buscapé -->
  </appSettings>
</configuration>
